<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.flat.head.dal.mappers.LogManageMapper">

    <resultMap id="adminLog" type="cn.com.flat.head.pojo.OperateArchiveLog">
        <id column="log_id" property="logId" />
        <result column="operate_type" property="operateType" />
        <result column="operate_user" property="operateUser" />
        <result column="operate_time" property="operateTime" />
        <result column="operator_result" property="operatorResult" />
        <result column="operate_content" property="operateContent" />
        <result column="content_hmac" property="contentHmac" />
        <result column="audit_flag" property="auditFlag" />
    </resultMap>

    <select id="getOperateArchiveLogs" resultMap="adminLog">

    select * from kms_operate_log
        <where>
            <if test="operateType != null  and operateType != ''">
                AND   operate_type=#{operateType}
            </if>

            <if test="operatorResult != 0 and operatorResult != ''">
                AND operator_result=#{operatorResult}
            </if>
            <if test="operateUser != null  and operateUser != ''">
                AND operate_user=#{operateUser}
            </if>
            <if test="auditFlag != null  and auditFlag != ''">
                AND   audit_flag=#{auditFlag}
            </if>
            <if test="operateTimeBegin != null and operateTimeBegin != ''">
                AND operate_time  <![CDATA[ >= ]]> DATE_FORMAT(#{operateTimeBegin},'%Y-%m-%d %h:%i:%S')
            </if>
            <if test="operateTimeEnd != null and operateTimeEnd != ''">
                AND operate_time <![CDATA[ <= ]]> DATE_FORMAT(#{operateTimeEnd},'%Y-%m-%d %h:%i:%S')
            </if>

        </where>

    </select>

    <update id="auditLog">
    update  kms_operate_log set audit_flag = 1 where log_id =#{logId}

    </update>

    <delete id="deleteOperatorLog" parameterType="int">
        delete from kms_operate_log where log_id in
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item.logId}
        </foreach>
    </delete>



    <insert id="insertOperateArchiveLogs">
        insert into kms_operate_archive_log
            (log_id,operate_type,operate_user,operate_time,operator_result,operate_content,content_hmac,audit_flag)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.logId},
            #{item.operateType},
            #{item.operateUser},
            #{item.operateTime},
            #{item.operatorResult},
            #{item.operateContent},
            #{item.contentHmac},
            #{item.auditFlag}
            )
        </foreach>

    </insert>




</mapper>