<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.flat.head.dal.mappers.MailConfigMapper">
    <resultMap id="mailConfig" type="cn.com.flat.head.pojo.Mail">
        <id column="id" property="id" />
        <result column="addr" property="addr" />
        <result column="port" property="port" />
        <result column="time_out" property="timeOut" />
        <result column="send_mailbox" property="sendMailbox" />
        <result column="password" property="password" />
        <result column="receiving_mailbox" property="receivingMailbox" />
    </resultMap>



    <insert id="saveMail" parameterType="cn.com.flat.head.log.Log">
        insert into mail_config (addr, port, time_out, send_mailbox, password, receiving_mailbox) values
        (#{addr}, #{port}, #{timeOut}, #{sendMailbox}, #{password}, #{receivingMailbox})
    </insert>

    <select id="getMail" resultType="cn.com.flat.head.pojo.Mail">
      select * from   mail_config

    </select>

    <update id="update">

       update  mail_config set addr=#{addr}, port=#{port}, time_out=#{timeOut}, send_mailbox=#{sendMailbox}, password=#{password},receiving_mailbox=#{receivingMailbox}

    </update>

</mapper>